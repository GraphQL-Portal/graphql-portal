{
  "compilerOptions": {
    "incremental": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "target": "ES2018",
    "sourceMap": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "paths": {
      "@graphql-portal/*": ["packages/*/src/index.ts"]
    }
  },
  "references": [
    {
      "path": "packages/logger"
    },
    {
      "path": "packages/types"
    },
    {
      "path": "packages/dashboard"
    },
    {
      "path": "packages/config"
    },
    {
      "path": "packages/gateway"
    }
  ],
  "include": ["src"],
  "exclude": ["node_modules", "dist", "*.d.ts"]
}
