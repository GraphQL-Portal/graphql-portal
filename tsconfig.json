{
  "compilerOptions": {
    "incremental": true,
    "outDir": "dist",
    "baseUrl": ".",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "target": "ES2018",
    "sourceMap": true,
    "lib": [
      "esnext"
    ],
    "esModuleInterop": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "paths": {
      "@graphql-portal/*": ["packages/*/src/index.ts"]
    }
  },
  "references": [
    {
      "path": "packages/config"
    },
    {
      "path": "packages/logger"
    }
  ],
  "include": [
    "src"
  ],
  "exclude": ["node_modules", "dist"]
}
