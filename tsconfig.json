{
  "compilerOptions": {
    "incremental": true,
    "outDir": "dist",
    "baseUrl": ".",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "target": "ES2018",
    "sourceMap": true,
    "lib": [
      "esnext"
    ],
    "esModuleInterop": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "paths": {
      "@graphql-portal/config": ["packages/config/src/index.ts"],
      "@graphql-portal/gateway": ["packages/gateway/src/index.ts"]
    }
  },
  "include": [
    "packages",
    "src/**/*.ts"
  ]
}
