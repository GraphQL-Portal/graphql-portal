{
  "name": "graphql-portal",
  "version": "0.1.0",
  "author": "code.store",
  "license": "MIT",
  "private": true,
  "main": "dist/src/index.js",
  "scripts": {
    "generate-gateway-config": "json2ts -i packages/types/src/gateway-schema.json -o ./packages/types/src/gateway-config.ts --style.singleQuote --bannerComment \"/* eslint-disable */\"",
    "generate-mesh-source-config": "json2ts -i packages/types/src/mesh-source-schema.json -o ./packages/types/src/mesh-source-config.ts --style.singleQuote --bannerComment \"/* eslint-disable */\"",
    "generate-api-config": "json2ts -i packages/types/src/api-schema.json -o ./packages/types/src/api-config.ts --style.singleQuote --bannerComment \"/* eslint-disable */\"",
    "generate-configs": "yarn generate-gateway-config && yarn generate-mesh-source-config && yarn generate-api-config",
    "prebuild": "rimraf dist ./packages/config/dist ./packages/types/dist ./packages/dashboard/dist ./packages/logger/dist && yarn generate-configs",
    "build": "tsc -b",
    "start": "node dist/src/index",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts' --fix",
    "test": "jest --coverage --runInBand --detectOpenHandles"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@changesets/cli": "^2.12.0",
    "@graphql-mesh/config": "^0.11.5",
    "@graphql-mesh/graphql": "^0.10.2",
    "@graphql-mesh/runtime": "^0.10.4",
    "@graphql-mesh/types": "^0.23.0",
    "@graphql-portal/config": "^0.0.1",
    "@graphql-portal/dashboard": "^0.0.1",
    "@graphql-portal/logger": "^0.0.1",
    "@graphql-portal/types": "^0.0.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/graphql-upload": "^8.0.4",
    "ajv": "^6.12.6",
    "cookie-parser": "^1.4.5",
    "cosmiconfig": "^7.0.0",
    "express": "^4.17.1",
    "express-graphql": "^0.12.0",
    "graphql": "^15.4.0",
    "graphql-upload": "^11.0.0",
    "ioredis": "^4.19.4",
    "uuid": "^8.3.1",
    "yaml": "^1.10.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/ioredis": "^4.17.8",
    "@types/node": "^14.14.14",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "eslint-config-prettier": "^7.0.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^5.0.6",
    "json-schema-to-typescript": "^10.0.0",
    "lint-staged": "^10.5.3",
    "prettier": "2.2.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint --fix"
    ],
    "**/*.{ts,tsx,graphql,yml,json}": [
      "prettier --write"
    ]
  }
}
