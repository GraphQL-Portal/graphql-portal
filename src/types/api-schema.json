{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ApiConfig",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string"
    },
    "endpoint": {
      "type": "string",
      "pattern": "^/"
    },
    "source_config_names": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "\\.(yaml|json)$"
      }
    }
  },
  "required": [
    "name",
    "endpoint",
    "source_config_names"
  ]
}