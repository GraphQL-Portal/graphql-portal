{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GatewayConfig",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "hostname": {
      "type": "string"
    },
    "listen_port": {
      "type": "integer"
    },
    "pool_size": {
      "type": "integer",
      "minimum": 1
    },
    "secret": {
      "type": "string"
    },
    "apis_path": {
      "type": "string"
    },
    "middleware_path": {
      "type": "string"
    },
    "sources_path": {
      "type": "string"
    },
    "use_dashboard_configs": {
      "type": "boolean"
    },
    "dashboard_config": {
      "$ref": "#/definitions/dashboard_config"
    },
    "enable_control_api": {
      "type": "boolean"
    },
    "control_api_config": {
      "$ref": "#/definitions/control_api_config"
    },
    "metrics": {
      "$ref": "#/definitions/metrics"
    },
    "log_format": {
      "type": "string",
      "enum": [
        "text",
        "json"
      ],
      "default": "text"
    },
    "log_level": {
      "type": "string",
      "enum": [
        "debug",
        "info",
        "warn",
        "error"
      ]
    },
    "redis_connection_string": {
      "type": "string"
    },
    "request_size_limit": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "number"
        }
      ],
      "description": "Argument of the bytes package's method parse https://www.npmjs.com/package/bytes"
    }
  },
  "required": [
    "hostname",
    "listen_port",
    "secret",
    "apis_path",
    "middleware_path",
    "sources_path",
    "use_dashboard_configs",
    "enable_control_api",
    "log_level",
    "redis_connection_string"
  ],
  "definitions": {
    "dashboard_config": {
      "type": "object",
      "description": "Used to specify GraphQL Portal Dashboard connection settings",
      "additionalProperties": false,
      "properties": {
        "connection_string": {
          "type": "string"
        }
      },
      "required": [
        "connection_string"
      ]
    },
    "control_api_config": {
      "type": "object",
      "description": "Used to specify GraphQL Portal Control API settings",
      "additionalProperties": false,
      "properties": {
        "endpoint": {
          "type": "string",
          "pattern": "^/"
        }
      }
    },
    "metrics": {
      "type": "object",
      "description": "Used to specify GraphQL Portal metrics settings",
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "type": "boolean"
        }
      }
    }
  }
}